    <title>오직농구</title>
    <link href="/static/stylesheets/base.css" rel="stylesheet" type="text/css">
    <link href="/static/stylesheets/common.css" rel="stylesheet" type="text/css">
    <link href="/static/stylesheets/main.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrap">
        <!-- header -->
        <div id="header">
            <div id="gnb-top" class="bg-season"
                style="display: block; background: url('/static/images/logo.png') no-repeat center 0;">
                <div class="gnb-fix-area">
                    <h1 class="logo-link"><a href="/">오직 농구 only basketball</a></h1>
                </div>
            </div>
            <!-- GNB -->
            <div id="gnb">
                <ul id="menu" class="gnb-list drop-menu">
                    <li><a href="public/popular.html">오직인기</a></li>
                    <li><a href="public/general.html">오직컨텐츠</a></li>
                    <li><a href="/matching">오직매칭</a></li>
                    <li><a href="./market.html">오직거래</a></li>
                    <li><a href="./gym.html">오직대관</a></li>
                </ul>
            </div>
            <!-- //GNB -->
        </div>
        <!-- //header -->

        <!-- container -->
        <div id="container">
            <!-- 본문 -->
            <div id="content-wrap">
                <!-- widget -->
                <div class="widget-wrap">
                    <div class="widget">
                        <h2><a href="public/popular.html">오직인기</a></h2>
                        <a href="public/popular.html" class="widget-more">+</a>
                        <ul>
                            <li>
                                <div class="item-wrap">
									<span class="title-wrap"><span class="date">2022-09-08</span>
                                    <a href="/view/11438096795" class="title">test제목</a></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="widget widget-right">
                        <h2><a href="public/general.html">오직컨텐츠</a></h2>
                        <a href="public/general.html" class="widget-more">+</a>
                        <ul>
                            <li>
                                <div class="item-wrap">
                                	<span class="title-wrap">
                                		<span class="date">2022-09-08</span>
                                		<a href="/view/11438106259" class="title">test제목</a>
                                		</span>
                                </div>
                            </li>

                        </ul>
                    </div>           
                    <div class="widget">
                        <h2><a href="public/popular.html">오직거래</a></h2>
                        <a href="public/popular.html" class="widget-more">+</a>
                        <ul>
                            <li>
                                <div class="item-wrap">
									<span class="title-wrap"><span class="date">2022-09-08</span>
                                    <a href="/view/11438096795" class="title">test제목</a></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="widget widget-right">
                        <h2><a href="public/general.html">오직대관</a></h2>
                        <a href="public/general.html" class="widget-more">+</a>
                        <ul>
                            <li>
                                <div class="item-wrap">
                                	<span class="title-wrap">
                                		<span class="date">2022-09-08</span>
                                		<a href="/view/11438106259" class="title">test제목</a>
                                		</span>
                                </div>
                            </li>

                        </ul>
                    </div> 
                </div>
            </div>
            <!-- //본문 -->
            <!-- aside -->
            <div id="aside-wrap">
                <div id="rightside">
                    <%
                        if(loginFlag == false) {
                    %>
                    <div class="login-wrap">
                        <form id="loginForm" method="post" action="login" accept-charset="utf-8">
                            <div class="login-box">
                                <span>
                                    <input type="text" name="user_id" placeholder="아이디" >
                                    <input type="password" name="password" placeholder="비밀번호">
                                </span>
                                <button type="submit" value="main" name="loginButton">
                                    <span>로그인</span>
                                </button>
                            </div>
                        </form>
                        <div class="user-util">
<!--                            <a href="/join.html">회원가입</a>-->
                            <a href="/join">회원가입</a>
<!--                            <a href="/member/find/id">아이디·비밀번호 찾기</a>-->
                        </div>
                    </div>
                        <%
                            } else if(user_id != null && loginFlag == true) {
                        %>
                    <div class="logout-wrap">
                            <div class="logout-box">
                                <button type="button" onclick="location.href='./logoutAction.html'">내 정보</button><br>
                                <button type="button" onclick="location.href='./logoutAction.html'">내 팀 정보</button><br>
                                <button type="button" onclick="location.href='/logout'">로그아웃</button>
                            </div>
                    </div>
                        <%
                            }else{
                        %>
                        <h2>로그인 상태 오류 발생  <%= user_id %><br><%= loginFlag%></h2>
                        <%
                            }
                        %>
                    <!-- //login -->
                </div>
            </div>
            <!-- aside 끝 -->
        </div>
        <!-- //container -->
        <!-- footer -->
        <div id="footer">
        </div>
        <!-- //footer -->
    </div>
</body>

</html>